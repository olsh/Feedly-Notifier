{
    "manifest_version": 2,

    "name": "Feedly Notifier",
    "description": "__MSG_ExtensionDescription__",
    "version": "2.16.0",
    "default_locale": "en",
    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "webRequest",
        "*://*.feedly.com/"
    ],
    // @if BROWSER!='firefox'
    "optional_permissions": [
        // @if BROWSER='chrome'
        "background",
        // @endif
        "<all_urls>"
    ],
    // @endif
    "browser_action": {
        "default_icon": {
            "19": "/images/icon_inactive.png",
            "38": "/images/icon_inactive38.png"
        },
        "default_title": "Feedly Notifier",
        "default_popup": "popup.html"
    },
    // @if BROWSER!='firefox'
    "options_page": "options.html",
    // @endif
    // @if BROWSER='firefox'
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    // @endif
    "background": {
        "scripts": [ "scripts/browser-polyfill.min.js", "scripts/feedly.api.js", "scripts/core.js"]
    },
    "icons": {
        "16": "/images/icon16.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "web_accessible_resources": [
        "/images/icon128.png"
    ],
    // @if BROWSER!='firefox'
    "minimum_chrome_version": "45",
    // @endif
    // @if BROWSER='firefox'
    "gecko": {
        "strict_min_version": "51.0"
    },
    // @endif
    "homepage_url": "http://olsh.github.io/Feedly-Notifier/"
}
